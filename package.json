{
  "name": "0g-storage-contracts",
  "version": "0.1.0",
  "description": "Smart contracts for 0g storage",
  "author": "Zero Gravity Labs",
  "license": "Unlicense",
  "private": true,
  "scripts": {
    "format": "prettier --write 'contracts/**/*.sol'",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint --fix 'contracts/**/*.sol'",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts --network local",
    "local": "yarn compile && yarn deploy:local",
    "deploy:rinkeby": "hardhat run scripts/deploy.ts --network rinkeby",
    "rinkeby": "yarn compile && yarn deploy:rinkeby"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@typechain/hardhat": "^6.0.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@nomicfoundation/hardhat-chai": "^1.0.0",
    "@nomicfoundation/hardhat-etherscan": "^1.5.0",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.7.1",
    "prettier": "^2.5.1",
    "solhint": "^3.3.6",
    "typescript": "^4.5.5",
    "ts-node": "^10.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.2"
  }
}
